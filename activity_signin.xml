<?xml version="1.0" encoding="utf-8"?>
   <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.myapplication.signin">


       <TextView
           android:id="@+id/ca"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="28dp"
           android:text="create account"
           android:textSize="25dp" />


    <EditText
        android:id="@+id/uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pass"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignStart="@+id/pass"
        android:layout_marginBottom="17dp"
        android:hint="enter username"
        android:textColorHighlight="#ff7eff15"
        android:textColorHint="#ffff25e6" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cpass"
        android:layout_alignLeft="@+id/cpass"
        android:layout_alignStart="@+id/cpass"
        android:layout_marginBottom="25dp"
        android:hint=" password"
        android:inputType="textPassword"
        android:textColorHint="#ffff299f" />

    <EditText
        android:id="@+id/cpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:hint="confirm password"
        android:inputType="textPassword"
        android:textColorHint="#ffff299f" />

    <Button
        android:id="@+id/register"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:text="register" />


</RelativeLayout>
